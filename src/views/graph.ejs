<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Secret Vault Dashboard</title>
  <link href="https://fonts.googleapis.com/css2?family=Orbitron:wght@500;700&display=swap" rel="stylesheet">
  <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
  <style>
    * {
      margin: 0;
      padding: 0;
      box-sizing: border-box;
      font-family: 'Orbitron', sans-serif;
    }
    body {
      background: radial-gradient(circle at top left, #0f2027, #203a43, #2c5364);
      color: #00fff2;
      min-height: 100vh;
      display: flex;
      flex-direction: column;
      align-items: center;
      padding: 20px;
    }
    h1 {
      font-size: 2em;
      margin-bottom: 10px;
      color: #00fff2;
      text-shadow: 0 0 10px #00fff2;
      letter-spacing: 2px;
    }
    .dashboard {
      width: 95%;
      max-width: 1000px;
      display: grid;
      grid-template-columns: 1fr 1fr;
      gap: 25px;
      margin-top: 40px;
    }
    .card {
      background: rgba(255, 255, 255, 0.05);
      border: 1px solid rgba(0, 255, 255, 0.2);
      border-radius: 20px;
      padding: 20px;
      backdrop-filter: blur(10px);
      box-shadow: 0 0 20px rgba(0, 255, 255, 0.2);
      transition: 0.3s;
    }
    .card:hover {
      transform: translateY(-5px);
      box-shadow: 0 0 30px rgba(0, 255, 255, 0.4);
    }
    canvas {
      width: 100%;
      height: 300px;
    }
    footer {
      margin-top: 50px;
      color: #00fff2;
      opacity: 0.7;
      font-size: 0.8em;
    }
    @media (max-width: 768px) {
      .dashboard {
        grid-template-columns: 1fr;
      }
    }
  </style>
</head>
<body>
  <h1>üïµÔ∏è‚Äç‚ôÇÔ∏è SECRET VAULT DASHBOARD</h1>
  <div class="dashboard">
    <div class="card">
      <h3>üìä Tasks Completed</h3>
      <canvas id="tasksChart"></canvas>
    </div>
    <div class="card">
      <h3>üìÖ Upcoming Events</h3>
      <canvas id="eventsChart"></canvas>
    </div>
    <div class="card">
      <h3>‚ö° Productivity</h3>
      <canvas id="productivityChart"></canvas>
    </div>
    <div class="card">
      <h3>üîê Vault Access Frequency</h3>
      <canvas id="accessChart"></canvas>
    </div>
  </div>

  <footer>¬© 2025 Secret Vault ‚Äî Secure. Futuristic. Personal.</footer>

  <script>
    async function loadStats() {
      try {
        const res = await fetch('/graph');
        const data = await res.json();

        // === Tasks Done ===
        new Chart(document.getElementById('tasksChart'), {
          type: 'line',
          data: {
            labels: data.labels,
            datasets: [{
              label: 'Tasks Done',
              data: data.tasksDone,
              borderColor: '#00fff2',
              backgroundColor: 'rgba(0,255,242,0.15)',
              fill: true,
              tension: 0.4,
            }]
          },
          options: {
            plugins: { legend: { labels: { color: '#00fff2' } } },
            scales: {
              x: { ticks: { color: '#00fff2' } },
              y: { ticks: { color: '#00fff2' } }
            }
          }
        });

        // === Upcoming Events ===
        new Chart(document.getElementById('eventsChart'), {
          type: 'bar',
          data: {
            labels: data.labels,
            datasets: [{
              label: 'Upcoming Events',
              data: data.upcomingEvents,
              backgroundColor: '#ff007f',
              borderRadius: 6
            }]
          },
          options: {
            plugins: { legend: { labels: { color: '#00fff2' } } },
            scales: {
              x: { ticks: { color: '#00fff2' } },
              y: { ticks: { color: '#00fff2' } }
            }
          }
        });

        // === Productivity ===
        new Chart(document.getElementById('productivityChart'), {
          type: 'radar',
          data: {
            labels: ['Focus', 'Speed', 'Accuracy', 'Consistency', 'Learning'],
            datasets: [{
              label: 'Performance',
              data: [85, 90, 70, 80, 75],
              borderColor: '#00ffcc',
              backgroundColor: 'rgba(0,255,204,0.15)',
              pointBackgroundColor: '#00fff2'
            }]
          },
          options: {
            scales: { r: { angleLines: { color: '#00fff2' }, pointLabels: { color: '#00fff2' } } },
            plugins: { legend: { labels: { color: '#00fff2' } } }
          }
        });

        // === Vault Access Frequency ===
        new Chart(document.getElementById('accessChart'), {
          type: 'doughnut',
          data: {
            labels: ['Morning', 'Afternoon', 'Evening', 'Night'],
            datasets: [{
              data: [5, 3, 8, 2],
              backgroundColor: ['#00fff2', '#ff007f', '#00c4ff', '#ffcc00']
            }]
          },
          options: {
            plugins: { legend: { labels: { color: '#00fff2' } } }
          }
        });

      } catch (err) {
        console.error('Error loading stats:', err);
      }
    }

    loadStats();
  </script>
</body>
</html>
