/* Navbar */
nav{
    display:flex;
    justify-content:space-between;
    align-items:center;
    padding:20px 40px;
    background:rgba(30,30,30,0.7);
    backdrop-filter:blur(10px);
    position:sticky;
    top:0;
    z-index:100;
}
nav h1{ color:#00ffdd; }
nav a{ color:#ff6ec7; text-decoration:none; }

/* Page Container */
