    color:#00ffdd;
    margin-bottom:20px;
}

/* Category Grid */
.category-grid{
    display:grid;
    grid-template-columns:repeat(auto-fit,minmax(200px,1fr));
    gap:20px;
}

/* Category Card */
.category-card{
    background:#1e1e1e;
    padding:25px;
    border-radius:15px;
    text-align:center;
    box-shadow:0 0 20px rgba(0,255,221,0.2);
    transition:0.25s;
    cursor:pointer;
}
.category-card:hover{
    transform:translateY(-5px);
    box-shadow:0 0 35px rgba(0,255,221,0.5);
}

.category-card span{
    font-size:40px;
    display:block;
    margin-bottom:10px;
}

.category-card h3{
    color:#00ffdd;
    margin-bottom:5px;
}

.category-card p{
    color:#aaa;
    font-size:14px;
}

</style>
