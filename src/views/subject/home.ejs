<!DOCTYPE html>
<html lang="en">
<head>
<meta charset="UTF-8" />
<title>Subjects & Progress Tracker</title>

<link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;600&display=swap" rel="stylesheet">

<style>
body{
  font-family:'Poppins',sans-serif;
  background: radial-gradient(circle at top, #05050a, #0b0f2e);
  color:#eafcff;
  padding:25px;
}

h1{
  text-align:center;
  font-size:2.6rem;
  color:#6dfff3;
  margin-bottom:35px;
  text-shadow:0 0 25px #00fff2;
}

/* ADD SUBJECT */
.add-subject{
  display:flex;
  justify-content:center;
  gap:12px;
  margin-bottom:35px;
}
.add-subject input{
  width:55%;
  padding:12px;
  border-radius:12px;
  background:rgba(255,255,255,0.08);
  border:1px solid rgba(0,255,255,.3);
  color:#fff;
}
.add-subject button{
  padding:12px 20px;
  border-radius:12px;
  border:none;
  background:linear-gradient(90deg,#00eaff,#9c27ff);
  color:white;
  font-weight:600;
  cursor:pointer;
}

/* SUBJECT CARD */
.subject{
  max-width:900px;
  margin:22px auto;
  padding:22px;
  border-radius:18px;
  background:rgba(255,255,255,0.06);
  backdrop-filter:blur(15px);
  border-left:4px solid #00ffe1;
}

.subject-header{
  display:flex;
  justify-content:space-between;
  align-items:center;
  cursor:pointer;
}

.subject-header h2{
  color:#00f7ff;
}

.subject-actions{
  display:flex;
  gap:10px;
  align-items:center;
}

.delete-btn{
  background:#ff3b3b;
  border:none;
  color:white;
  padding:6px 10px;
  border-radius:8px;
  cursor:pointer;
}

/* PROGRESS */
.progress{
  height:10px;
  background:rgba(255,255,255,0.15);
  border-radius:10px;
  overflow:hidden;
}
.progress-bar{
  height:10px;
  background:linear-gradient(90deg,#00fff2,#9c27ff);
}

/* SYLLABUS */
.syllabus{
  margin-top:20px;
  display:none;
}

.topic{
  display:flex;
  justify-content:space-between;
  align-items:center;
  padding:10px;
  margin-bottom:8px;
  border-radius:10px;
  background:rgba(255,255,255,0.05);
}

.topic-right{
  display:flex;
  align-items:center;
  gap:12px;
}

.topic input{
  transform:scale(1.3);
  accent-color:#00ffe1;
}

/* MULTI ADD TOPIC */
.add-topic{
  margin-top:15px;
  display:flex;
  flex-direction:column;
  gap:10px;
}

.add-topic textarea{
  width:100%;
  min-height:90px;
  padding:10px;
  border-radius:10px;
  border:none;
  background:rgba(255,255,255,0.1);
  color:#fff;
  resize:vertical;
}

.add-topic button{
  align-self:flex-end;
  padding:10px 20px;
  border:none;
  border-radius:10px;
  background:linear-gradient(90deg,#00ffe1,#9c27ff);
  cursor:pointer;
  font-weight:600;
}
</style>

<script>
function toggleSyllabus(id){
  const el = document.getElementById('syllabus-'+id);
  el.style.display = el.style.display === 'block' ? 'none' : 'block';
}

/* Convert textarea lines to hidden inputs */
function prepareTopics(form){
  const textarea = form.querySelector("textarea");
  const lines = textarea.value.split("\n").map(t => t.trim()).filter(Boolean);

  form.querySelectorAll("input[name='topics[]']").forEach(e => e.remove());

  lines.forEach(line=>{
    const input = document.createElement("input");
    input.type = "hidden";
    input.name = "topics[]";
    input.value = line;
    form.appendChild(input);
  });

  if(lines.length === 0){
    alert("Please add at least one topic");
    return false;
  }
  return true;
}
</script>
</head>

<body>

<h1>ðŸš€ My Subjects & Progress Tracker</h1>

<form class="add-subject" action="/add-sub" method="POST">
  <input type="text" name="name" placeholder="Add new subject" required>
  <button type="submit">+ Add Subject</button>
</form>

<% subjects.forEach(subject => { 
  const completed = subject.syllabus.filter(t => t.completed).length;
  const total = subject.syllabus.length || 1;
  const percent = Math.round((completed / total) * 100);
%>

<div class="subject">
  <div class="subject-header" onclick="toggleSyllabus('<%= subject._id %>')">
    <h2><%= subject.name %></h2>

    <div class="subject-actions">
      <div style="width:160px">
        <div class="progress">
          <div class="progress-bar" style="width:<%= percent %>%"></div>
        </div>
        <small><%= percent %>% complete</small>
      </div>

      <form action="/delete-subject/<%= subject._id %>" method="POST">
        <button class="delete-btn">ðŸ—‘</button>
      </form>
    </div>
  </div>

  <div class="syllabus" id="syllabus-<%= subject._id %>">

    <% subject.syllabus.forEach(topic => { %>
      <div class="topic">
        <span><%= topic.topic %></span>

        <div class="topic-right">
          <form action="/toggle-topic/<%= subject._id %>/<%= topic._id %>" method="POST">
            <input type="checkbox" onchange="this.form.submit()" <%= topic.completed?'checked':'' %>>
          </form>

          <form action="/delete-topic/<%= subject._id %>/<%= topic._id %>" method="POST">
            <button class="delete-btn">ðŸ—‘</button>
          </form>
        </div>
      </div>
    <% }) %>

    <!-- MULTI TOPIC ADD -->
    <form class="add-topic" action="/add-topic/<%= subject._id %>" method="POST"
          onsubmit="return prepareTopics(this)">
      <textarea placeholder="Add multiple topics (one per line)"></textarea>
      <button>Add Topics</button>
    </form>

  </div>
</div>

<% }) %>

</body>
</html>
